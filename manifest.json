{
    "manifest_version": 2,
    "name": "Qwant Lite",
    "version": "1.0.4",
    "description": "Qwant Lite: the search engine that respects your privacy",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "chrome_settings_overrides": {
        "search_provider": {
            "name": "Qwant Lite Extension",
            "keyword": "ql",
            "search_url": "https://lite.qwant.com/?q={searchTerms}&client=ext-firefox-sb",
            "favicon_url": "https://lite.qwant.com/favicon.ico",
            "suggest_url": "https://api.qwant.com/api/suggest/?q={searchTerms}&client=opensearch",
            "is_default": true
        }
    },
    "omnibox": {
        "keyword": "ql"
    },
	"permissions": [
		"*://*.qwant.com/*",
		"webRequest"
	],
    "content_scripts": [
        {
            "matches": [
                "https://lite.qwant.com/*"
            ],
            "css": [
                "css/qwant.css"
            ]
        }
    ]
}
